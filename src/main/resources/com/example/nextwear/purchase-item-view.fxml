<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<ScrollPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.nextwear.PurchaseController"
            fitToWidth="true"
            hbarPolicy="NEVER"
            vbarPolicy="AS_NEEDED"
            stylesheets="@application.css"
            style="-fx-background: #0e0e0e; -fx-border-color: transparent;">

    <VBox spacing="0" style="-fx-background-color: #0e0e0e;">

        <!-- NAVIGATION BAR -->
        <HBox alignment="CENTER_LEFT" spacing="30"
              style="-fx-background-color: #000000; -fx-padding: 25 60;">
            <HBox alignment="CENTER_LEFT" spacing="4">
                <Label text="NEXT" style="-fx-text-fill: white; -fx-font-size: 30px; -fx-font-weight: bold;"/>
                <Label text="WEAR" style="-fx-text-fill: #2979FF; -fx-font-size: 30px; -fx-font-weight: bold;"/>
            </HBox>

            <Pane HBox.hgrow="ALWAYS"/>

            <HBox spacing="20" alignment="CENTER_RIGHT">
                <Button text="Home" styleClass="nav-btn" onAction="#goHome"/>
                <Button text="Shop" styleClass="nav-btn" onAction="#goShop"/>
                <Button text="My Purchase" styleClass="nav-btn-active" onAction="#goPurchase"/>
                <Button text="Log Out" styleClass="nav-btn" onAction="#logout"/>
            </HBox>
        </HBox>

        <!-- HEADER SECTION -->
        <HBox alignment="CENTER" style="-fx-background-color: #000000; -fx-padding: 60 80;">
            <VBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
                <Label text="My Purchases"
                       style="-fx-text-fill: white; -fx-font-size: 42px; -fx-font-weight: bold;"/>
                <Label text="Your order history and tracking information"
                       style="-fx-text-fill: #cfcfcf; -fx-font-size: 16px;"/>
            </VBox>

            <Pane HBox.hgrow="ALWAYS"/>

            <VBox alignment="CENTER_RIGHT" spacing="0">
                <Label text="ORDER" style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;"/>
                <Label text="HISTORY" style="-fx-text-fill: #2979FF; -fx-font-size: 36px; -fx-font-weight: bold;"/>
            </VBox>
        </HBox>

        <!-- MAIN CONTENT -->
        <VBox alignment="CENTER" style="-fx-background-color: #0e0e0e; -fx-padding: 40 80;" spacing="40">

            <!-- STATS SECTION -->
            <HBox spacing="40" alignment="CENTER">
                <VBox alignment="CENTER" spacing="8"
                      style="-fx-background-color: #1a1a1a; -fx-padding: 25 35; -fx-background-radius: 15; -fx-min-width: 180;">
                    <Label text="0" style="-fx-font-size: 36px; -fx-text-fill: #2979FF; -fx-font-weight: bold;"/>
                    <Label text="Total Orders" style="-fx-font-size: 16px; -fx-text-fill: #cfcfcf;"/>
                </VBox>
                <VBox alignment="CENTER" spacing="8"
                      style="-fx-background-color: #1a1a1a; -fx-padding: 25 35; -fx-background-radius: 15; -fx-min-width: 180;">
                    <Label text="â‚± 0" style="-fx-font-size: 36px; -fx-text-fill: #3ad13a; -fx-font-weight: bold;"/>
                    <Label text="Total Spent" style="-fx-font-size: 16px; -fx-text-fill: #cfcfcf;"/>
                </VBox>
                <VBox alignment="CENTER" spacing="8"
                      style="-fx-background-color: #1a1a1a; -fx-padding: 25 35; -fx-background-radius: 15; -fx-min-width: 180;">
                    <Label text="0" style="-fx-font-size: 36px; -fx-text-fill: #ff6b35; -fx-font-weight: bold;"/>
                    <Label text="Delivered" style="-fx-font-size: 16px; -fx-text-fill: #cfcfcf;"/>
                </VBox>
            </HBox>

            <!-- PURCHASE ITEMS CONTAINER -->
            <VBox fx:id="purchaseItemsContainer" alignment="CENTER" spacing="25"
                  style="-fx-background-color: #1a1a1a; -fx-padding: 60 40; -fx-background-radius: 20; -fx-max-width: 800;">
                <Label text="ðŸ“­" style="-fx-font-size: 80px;"/>
                <Label text="No purchases yet"
                       style="-fx-font-size: 28px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Label text="Start shopping to see your orders here!"
                       style="-fx-font-size: 16px; -fx-text-fill: #B0B0B0; -fx-text-alignment: center;"/>
                <Button text="ðŸ›ï¸ Start Shopping Now"
                        onAction="#goShop"
                        style="-fx-font-size: 16px; -fx-padding: 12 25; -fx-background-color: #2979FF; -fx-text-fill: white; -fx-background-radius: 8;"/>
            </VBox>

        </VBox>

    </VBox>
</ScrollPane>