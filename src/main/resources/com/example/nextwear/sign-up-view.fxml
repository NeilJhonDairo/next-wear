<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER"
      spacing="30"
      prefWidth="1080"
      prefHeight="1920"
      style="-fx-background-color: white;">


    <TextFlow textAlignment="CENTER">
        <Text text="NEXT" fill="black"
              style="-fx-font-size: 36px; -fx-font-weight: bold;" />
        <Text text="WEAR" fill="#007bff"
              style="-fx-font-size: 36px; -fx-font-weight: bold;" />
    </TextFlow>


    <VBox alignment="CENTER" spacing="16" maxWidth="400">

        <TextField fx:id="usernameField"
                   promptText="Username"
                   prefWidth="400" prefHeight="40"
                   style="-fx-border-color: #000000;
                          -fx-border-radius: 5;
                          -fx-background-radius: 5;
                          -fx-focus-color: transparent;" />

        <TextField fx:id="emailField"
                   promptText="Email"
                   prefWidth="400" prefHeight="40"
                   style="-fx-border-color: #000000;
                          -fx-border-radius: 5;
                          -fx-background-radius: 5;
                          -fx-focus-color: transparent;" />

        <PasswordField fx:id="passwordField"
                       promptText="Password"
                       prefWidth="400" prefHeight="40"
                       style="-fx-border-color: #000000;
                              -fx-border-radius: 5;
                              -fx-background-radius: 5;
                              -fx-focus-color: transparent;" />

        <Button text="Sign Up"
                prefWidth="400" prefHeight="40"
                style="-fx-background-color: black;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-background-radius: 5;" />

        <HBox alignment="CENTER" spacing="5">
            <Label text="Already have an account?"
                   style="-fx-text-fill: #555555; -fx-font-size: 12px;" />
            <Hyperlink text="Log In"
                       style="-fx-text-fill: #007bff; -fx-font-size: 12px;" />
        </HBox>

    </VBox>

    <!-- Footer -->
    <Label text="Â©2025 NEXTWEAR. All Rights Reserved."
           alignment="CENTER"
           style="-fx-text-fill: gray; -fx-font-size: 11px;" />

</VBox>
