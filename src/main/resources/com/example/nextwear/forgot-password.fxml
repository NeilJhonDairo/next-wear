<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.nextwear.ForgotPasswordController"
            prefWidth="1920"
            prefHeight="1080"
            style="-fx-background-color: white;">

    <center>
        <VBox alignment="CENTER"
              spacing="28"
              maxWidth="400"
              BorderPane.alignment="CENTER">

            <!-- Logo -->
            <TextFlow textAlignment="CENTER">
                <Text text="NEXT" style="-fx-fill: black; -fx-font-size: 40px; -fx-font-weight: bold;" />
                <Text text="WEAR" style="-fx-fill: #2979FF; -fx-font-size: 40px; -fx-font-weight: bold;" />
            </TextFlow>

            <!-- Forgot Password Content -->
            <VBox spacing="10" alignment="CENTER_LEFT" maxWidth="360">
                <Label text="Forgot Password" style="-fx-font-size: 17px; -fx-font-weight: bold;" />
                <Label text="Enter your email to receive a reset link:" style="-fx-font-size: 13px; -fx-text-fill: #444;" />

                <TextField fx:id="emailField"
                           promptText="Email"
                           prefWidth="320"
                           prefHeight="38"
                           style="-fx-border-color: #000000; -fx-border-width: 1; -fx-border-radius: 3; -fx-background-radius: 3; -fx-font-size: 13px;"/>

                <HBox spacing="10" alignment="CENTER_RIGHT" prefWidth="320">
                    <Button text="Back"
                            onAction="#onBackToLogin"
                            prefWidth="90"
                            prefHeight="32"
                            style="-fx-background-color: #f1f1f1; -fx-text-fill: black; -fx-font-weight: bold; -fx-background-radius: 4;"/>
                    <Button text="Send Reset Link"
                            onAction="#onSendResetLink"
                            prefWidth="140"
                            prefHeight="32"
                            style="-fx-background-color: black; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4;"/>
                </HBox>
            </VBox>

            <Label text="Â©2025 NEXTWEAR. All Rights Reserved."
                   style="-fx-text-fill: gray; -fx-font-size: 12px;"
                   alignment="CENTER">
                <padding>
                    <Insets top="40"/>
                </padding>
            </Label>
        </VBox>
    </center>

</BorderPane>
