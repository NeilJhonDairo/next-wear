<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.nextwear.LoginController"
           prefWidth="1080"
           prefHeight="1920"
           style="-fx-background-color: white;">

    <children>

        <!-- Main container -->
        <VBox alignment="CENTER" spacing="30">

            <!-- Logo text -->
            <TextFlow textAlignment="CENTER">
                <Text text="NEXT" fill="black"
                      style="-fx-font-size: 36px; -fx-font-weight: bold;" />
                <Text text="WEAR" fill="#007bff"
                      style="-fx-font-size: 36px; -fx-font-weight: bold;" />
            </TextFlow>

            <!-- Login form -->
            <VBox alignment="CENTER" spacing="16" maxWidth="400">

                <!-- Email -->
                <TextField fx:id="emailField"
                           promptText="Email"
                           prefWidth="400" prefHeight="40"
                           style="-fx-border-color: #000000;
                                  -fx-border-radius: 5;
                                  -fx-background-radius: 5;
                                  -fx-focus-color: transparent;" />

                <!-- Password -->
                <PasswordField fx:id="passwordField"
                               promptText="Password"
                               prefWidth="400" prefHeight="40"
                               style="-fx-border-color: #000000;
                                      -fx-border-radius: 5;
                                      -fx-background-radius: 5;
                                      -fx-focus-color: transparent;" />

                <!-- Forgot Password + Login -->
                <HBox alignment="CENTER_RIGHT" spacing="10" prefWidth="400">
                    <Label text="Forgot Password"
                           style="-fx-text-fill: #333333; -fx-font-size: 12px;" />
                    <Button text="Log In"
                            onAction="#onLogin"
                            prefWidth="80" prefHeight="30"
                            style="-fx-background-color: black;
                                   -fx-text-fill: white;
                                   -fx-font-weight: bold;
                                   -fx-background-radius: 3;" />
                </HBox>

                <!-- Sign Up -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Don’t have an account?"
                           style="-fx-text-fill: #555555; -fx-font-size: 12px;" />
                    <Hyperlink text="Sign Up"
                               style="-fx-text-fill: #007bff; -fx-font-size: 12px;" />
                </HBox>

            </VBox>

            <!-- Footer -->
            <Label text="©2025 NEXTWEAR. All Rights Reserved."
                   alignment="CENTER"
                   style="-fx-text-fill: gray; -fx-font-size: 11px;" />

        </VBox>

    </children>
</StackPane>
