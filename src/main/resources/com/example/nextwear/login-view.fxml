<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.nextwear.LoginController"
      alignment="CENTER"
      prefWidth="1920"
      prefHeight="1080"
      style="-fx-background-color: white;">

    <!-- CENTER WRAPPER (acts like a card; limits width so fields stay small) -->
    <VBox alignment="CENTER" spacing="28" maxWidth="400" style="-fx-padding: 40 0 0 0;">
        <!-- Logo -->
        <TextFlow textAlignment="CENTER">
            <Text text="NEXT" style="-fx-fill: black; -fx-font-size: 40px; -fx-font-weight: bold;" />
            <Text text="WEAR" style="-fx-fill: #2979FF; -fx-font-size: 40px; -fx-font-weight: bold;" />
        </TextFlow>

        <!-- compact form: everything constrained to 320px -->
        <VBox spacing="8" alignment="CENTER_LEFT" maxWidth="360" >
            <TextField fx:id="emailField"
                       promptText="Email"
                       prefWidth="320"
                       prefHeight="38"
                       style="-fx-border-color: #000000; -fx-border-width: 1; -fx-border-radius: 3; -fx-background-radius: 3; -fx-font-size: 13px;"/>

            <PasswordField fx:id="passwordField"
                           promptText="Password"
                           prefWidth="320"
                           prefHeight="38"
                           style="-fx-border-color: #000000; -fx-border-width: 1; -fx-border-radius: 3; -fx-background-radius: 3; -fx-font-size: 13px;"/>

            <!-- Forgot password + login button (aligned right inside same 320px width) -->
            <HBox spacing="8" alignment="CENTER_RIGHT" prefWidth="320">
                <Hyperlink text="Forgot Password"
                           style="-fx-text-fill: #333333; -fx-font-size: 12.5px; -fx-border-color: transparent;"/>
                <Button text="Log In"
                        onAction="#onLogin"
                        prefWidth="90"
                        prefHeight="32"
                        style="-fx-background-color: black; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4;"/>
            </HBox>
        </VBox>

        <!-- Sign up link centered under the compact form -->
        <HBox alignment="CENTER" spacing="5">
            <Label text="Don’t have an account?" style="-fx-text-fill: #555555; -fx-font-size: 13px;" />
            <Hyperlink text="Sign Up"
                       style="-fx-text-fill: #2979FF; -fx-font-size: 13px; -fx-border-color: transparent;" />
        </HBox>
    </VBox>

    <!-- Footer (kept lower) -->
    <Label text="©2025 NEXTWEAR. All Rights Reserved."
           style="-fx-text-fill: gray; -fx-font-size: 12px;"
           alignment="CENTER">
        <padding>
            <Insets top="40"/>
        </padding>
    </Label>

</VBox>
