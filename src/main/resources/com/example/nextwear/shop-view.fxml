            </VBox>
        </HBox>

        <!-- PRODUCT SECTION -->
        <VBox fx:id="productSection" alignment="CENTER" style="-fx-background-color: #0e0e0e; -fx-padding: 30 0 80 0;" spacing="0">
            <HBox alignment="CENTER" spacing="35" style="-fx-padding: 0 80;">

                <!-- Product 1 -->
                <VBox alignment="CENTER" spacing="10" styleClass="product-card" onMouseClicked="#showProductModal">
                    <ImageView fitWidth="220" fitHeight="220" preserveRatio="true">
                        <image>
                            <Image url="@NextWearShopimage/Riseabove.png"/>
                        </image>
                    </ImageView>
                    <Label text="Rise Above" style="-fx-text-fill: white; -fx-font-size: 30px; -fx-font-weight: 600;"/>
