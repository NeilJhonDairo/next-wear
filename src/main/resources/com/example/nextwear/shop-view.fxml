                </VBox>

                <!-- Product 2 -->
                <VBox alignment="CENTER" spacing="10" styleClass="product-card" onMouseClicked="#showProductModal">
                    <ImageView fitWidth="220" fitHeight="220" preserveRatio="true">
                        <image>
                            <Image url="@NextWearShopimage/VisionLeaks.png"/>
                        </image>
                    </ImageView>
                    <Label text="Vision Leaks" style="-fx-text-fill: white; -fx-font-size: 30px; -fx-font-weight: 600;"/>
