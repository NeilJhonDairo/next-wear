            </HBox>
        </HBox>

        <!-- HERO SECTION -->
        <HBox alignment="CENTER"
              style="-fx-background-color: #000000; -fx-padding: 40 80;">
            <VBox alignment="CENTER_LEFT" spacing="6" HBox.hgrow="ALWAYS">
                <Label text="Shop  Our Latest Tees"
                       style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;"/>
                <Label text="High-Quality. Affordable. Made For You"
                       style="-fx-text-fill: #cfcfcf; -fx-font-size: 14px;"/>
                <Button text="See Products" styleClass="primary-btn" onAction="#scrollToProducts"/>
            </VBox>

            <Pane HBox.hgrow="ALWAYS"/>

            <VBox alignment="CENTER_RIGHT" spacing="0">
                <Label text="NEXT" style="-fx-text-fill: white; -fx-font-size: 48px; -fx-font-weight: bold;"/>
