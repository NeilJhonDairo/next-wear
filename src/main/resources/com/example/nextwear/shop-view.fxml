                    <ImageView fitWidth="220" fitHeight="220" preserveRatio="true">
                        <image>
                            <Image url="@NextWearShopimage/Nobound.png"/>
                        </image>
                    </ImageView>
                    <Label text="No Bound" style="-fx-text-fill: white; -fx-font-size: 30px; -fx-font-weight: 600;"/>
