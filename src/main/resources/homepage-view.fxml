<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx/17"
      prefWidth="1920" prefHeight="1080"
      spacing="30"
      style="-fx-background-color: #0E0E0E;">

    <!-- Navigation -->
    <HBox alignment="CENTER_LEFT" spacing="30"
          style="-fx-background-color: #000000; -fx-padding: 35 60 25 60;">
        <HBox alignment="CENTER_LEFT" spacing="4">
            <Label text="NEXT" style="-fx-text-fill: white; -fx-font-size: 30px; -fx-font-weight: bold;"/>
            <Label text="WEAR" style="-fx-text-fill: #2979FF; -fx-font-size: 30px; -fx-font-weight: bold;"/>
        </HBox>

        <Pane HBox.hgrow="ALWAYS" pickOnBounds="false"/>


        <!-- Menu -->
        <HBox spacing="20" alignment="CENTER_RIGHT" pickOnBounds="false">
        <Button text="Home" styleClass="nav-btn-active"/>
            <Button text="Shop" styleClass="nav-btn"/>
            <Button text="My Purchase" styleClass="nav-btn"/>
            <Button text="Log Out" styleClass="nav-btn"/>
            <Button text="ðŸ›’" styleClass="nav-btn"/>

        </HBox>
    </HBox>

    <!-- Section -->
    <HBox spacing="60" alignment="CENTER" style="-fx-padding: 80;">

        <VBox spacing="25"
              alignment="CENTER_LEFT"
              HBox.hgrow="ALWAYS"
              style="-fx-padding: -450 0 0 30;">  <!-- Top left -->

        <Label text="Shop Our Latest Tees"
                   style="-fx-text-fill: white; -fx-font-size: 50px; -fx-font-weight: bold;"
                   wrapText="true"/>
            <Label text="High-Quality. Affordable. Made For You."
                   style="-fx-text-fill: #B0B0B0; -fx-font-size: 20px;"/>
            <Button text="See Products"
                    style="-fx-background-color: #2979FF; -fx-text-fill: white;
                       -fx-padding: 15 40; -fx-font-size: 18px; -fx-background-radius: 10;"/>
        </VBox>

        <ImageView
                fitWidth="520"
                preserveRatio="true"
                smooth="true"
                cache="true"
                styleClass="right-image">
            <image>
                <Image url="@Nexthome.png" />
            </image>
        </ImageView>


    </HBox>


</VBox>
